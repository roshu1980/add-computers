            <ops_belfiusDirectNet>
                <title>Barclaycard Belfius Direct Net</title>
                <model>ops/payment_belfiusDirectNet</model>
            </ops_belfiusDirectNet>
            <ops_bankTransfer>
                <title>Barclaycard BankTransfer</title>
                <model>ops/payment_bankTransfer</model>
            </ops_bankTransfer>
            <ops_openInvoiceDe>
                <title>Rechnung</title>
                <model>ops/payment_openInvoiceDe</model>
                <allow_discounted_carts>0</allow_discounted_carts>
                <allowspecific>1</allowspecific>
                <specificcountry>DE</specificcountry>
            </ops_openInvoiceDe>
            <ops_openInvoiceNl>
                <title>Rechnung (Niederlande)</title>
                <model>ops/payment_openInvoiceNl</model>
                <allowspecific>1</allowspecific>
                <specificcountry>NL</specificcountry>
            </ops_openInvoiceNl>
            <ops_cbcOnline>
                <title>Barclaycard CbcOnline</title>
                <model>ops/payment_cbcOnline</model>
            </ops_cbcOnline>
            <ops_giroPay>
                <title>Barclaycard GiroPay</title>
                <model>ops/payment_giroPay</model>
            </ops_giroPay>
            <ops_interSolve>
                <title>Barclaycard InterSolve</title>
                <model>ops/payment_interSolve</model>
            </ops_interSolve>
            <ops_cashU>
                <title>Barclaycard CashU</title>
                <model>ops/payment_cashU</model>
            </ops_cashU>
            <ops_mpass>
                <title>Barclaycard Mpass</title>
                <model>ops/payment_mpass</model>
            </ops_mpass>
            <ops_miniTix>
