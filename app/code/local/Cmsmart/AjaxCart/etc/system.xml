<?xml version="1.0"?>
<config>

    <tabs>
        <cmsmart module="ajaxcart">
            <label>CsmMart Extensions</label>
            <sort_order>100</sort_order>
        </cmsmart>
    </tabs>
	
    <sections>
        <ajaxcart translate="label" module="ajaxcart">
            <class>separator-top</class>
            <label>Ajax Cart</label>
            <tab>cmsmart</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
		
                <viewsetting translate="label" module="ajaxcart">
                    <label>Drop Down Cart Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
					
						<enableview translate="label">
                            <label>Enable ajaxcart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableview>
						<usejquery translate="label">
                            <label>Use jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </usejquery>
						<themeoptions translate="label">
                            <label>Theme Options</label>
                            <frontend_type>Radios</frontend_type>
							<source_model>ajaxcart/themeoptions</source_model>
							<comment>Default as Default</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </themeoptions>
												
						<enableitemupdate translate="label">
                            <label>Enable Item Update</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableitemupdate>
						
							
						<enableupdate translate="label">
                            <label>Enable Update</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableupdate>
						
						<enableclear translate="label">
                            <label>Enable Empty Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableclear>
						
						<enablecheckout translate="label">
                            <label>Enable Checkout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablecheckout>		
						<boxshadow translate="label">
                            <label>Box Shadow</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as: 0 0 3px #55555</comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </boxshadow>

						<background_color translate="label">
                            <label>Background Color</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as FFFFFF</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </background_color>
						
						<linkcartclass translate="label">
                            <label>Link cart Class</label>
                            <frontend_type>text</frontend_type>
							<comment>Default: ul.links a.top-link-cart</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </linkcartclass>
						
						<border_size translate="label">
                            <label>Border size</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as 0</comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </border_size>
						<border_color translate="label">
                            <label>Border Color</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as DDDDDD</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </border_color>
											
						<imagewidth translate="label">
                            <label>Image width</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as 65</comment>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </imagewidth>
						
						<imageheight translate="label">
                            <label>Image height</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as 65</comment>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </imageheight>
					<!--
						<ajaxcart_left translate="label">
                            <label>Drop Down Ajaxcart Margin-left</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as -150</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ajaxcart_left>

						<ajaxcart_width translate="label">
                            <label>Drop Down Cart Width</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as 320</comment>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ajaxcart_width>
						
						
						<enableicon translate="label">
                            <label>Show Cart Icon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
							<comment>Default is No</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableicon> -->
						
						<carticon translate="label comment">
							<label>Cart Icon</label>
							<frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">cmsmart/ajaxcart</upload_dir> 
                            <base_url type="media" scope_info="1">cmsmart/ajaxcart</base_url>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</carticon>	
						
						<!-- <ajaxcarticonp translate="label">
                            <label>Cart Icon Position</label>
                            <frontend_type>text</frontend_type>
							<comment>type [top, right, bottom, left]. Default: 50px, 50px, auto, auto</comment>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ajaxcarticonp>	 -->						
                    </fields>
                </viewsetting>

                <optionview translate="label" module="ajaxcart">
                    <label>Option View Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>						
						<background_color translate="label">
                            <label>Background Color</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as FFFFFF</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </background_color>
						<border_size translate="label">
                            <label>Border Size</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as 5</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </border_size>
						<border_color translate="label">
                            <label>Border Color</label>
                            <frontend_type>text</frontend_type>
							<comment>Default as DDDDDD</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </border_color>
					
                    </fields>
				</optionview>
				
            </groups>
        </ajaxcart>
    </sections>
</config>
